<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="IoTLib_Test.Views.UserControl_I2c">

  <StackPanel Margin="5">
    <StackPanel.Styles>
      <Style Selector="Button">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="10"/>
      </Style>
      <Style Selector="StackPanel">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Grid.Row" Value="0"/>
      </Style>
      <Style Selector="TextBlock">
        <Setter Property="FontSize" Value="12"/>
      </Style>
      <Style Selector="DockPanel">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="5"/>
      </Style>
      <Style Selector="Border">
        <Setter Property="BorderThickness" Value="0.6"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
      </Style>
    </StackPanel.Styles>

    <TextBlock Text="Read Sensor Input" FontWeight="Bold"/>
    <TextBlock Text="Not yet implemented" FontSize="10"/>

    <StackPanel Orientation="Horizontal">
      <TextBlock Text="I²C Bus ID: "/>
      <TextBox Name="tbBusId"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="I²C Device Address: " />
      <TextBox Name="tbDevAddr"/>
    </StackPanel>
    <Button Name="btnI2c" Content="Start I²C" Background="LightGreen" Grid.Column="0"/>
    
    <Border/>

    <DockPanel>
      <TextBlock Name="tbInfo" FontWeight="Medium" TextWrapping="Wrap" Foreground="Blue"/>
    </DockPanel>

  </StackPanel>

</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="IoTLib_Test.Views.UserControl_Gpio">

  <StackPanel Margin="5">
    <StackPanel.Styles>
      <Style Selector="Button">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontSize" Value="10"/>
      </Style>
      <Style Selector="StackPanel">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Grid.Row" Value="0"/>
      </Style>
      <Style Selector="TextBlock">
        <Setter Property="FontSize" Value="12"/>
      </Style>
      <Style Selector="DockPanel">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="5"/>
      </Style>
      <Style Selector="Border">
        <Setter Property="BorderThickness" Value="0.6"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
      </Style>
    </StackPanel.Styles>

    <TextBlock Text="GPIO LED Test" FontWeight="Bold"/>
    <TextBlock Text="Connect LED to PcoreBBDSI Rev1.40 - J11-8 / J11-11" FontSize="10"/>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Button Name="btnLedOn" Content="LED On" Grid.Column="0"/>
      <Button Name="btnLedBlink" Content="LED Blinking" Grid.Column="1"/>
      <Button Name="btnLedOff" Content="LED Off" Grid.Column="2"/>
    </Grid>
    <Border/>
    
    <TextBlock Text="GPIO Input Test" FontWeight="Bold"/>
    <TextBlock Text="Connect LED to PcoreBBDSI Rev1.40 - J11-18 / J11-27" FontSize="10"/>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Button Name="btnStartInput" Content="Start GPIO Input" Grid.Column="0"/>
      <Button Name="btnStopInput" Content="Stop GPIO Input" Grid.Column="2"/>
    </Grid>
    <TextBlock Name="tbGpioIn" TextWrapping="Wrap" Grid.Column="1" Foreground="Blue"/>
    <Border/>

    <DockPanel>
      <TextBlock Name="tbInfo" FontWeight="Medium" TextWrapping="Wrap" Foreground="Blue"/>
    </DockPanel>
    
  </StackPanel>
</UserControl>
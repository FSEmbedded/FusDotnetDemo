<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="IoTLib_Test.Views.UserControl_Gpio">

  <StackPanel>
    <!-- LED Test -->
    <TextBlock Text="GPIO LED Test" FontWeight="Bold" FontSize="14"/>
    <TextBlock Name="tbLedDesc" Text="Placeholder"/>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Button Name="btnLedSwitch" Content="LED On" Grid.Column="0"/>
      <Button Name="btnLedBlink" Content="LED Blinking" Grid.Column="1"/>
    </Grid>
    <TextBlock Name="tbLedInfo" Foreground="Blue"/>
    <Border/>
    <!-- Input Test -->
    <TextBlock Text="GPIO Input Test" FontWeight="Bold" FontSize="14"/>
    <TextBlock Name="tbInputDesc" Text="Placeholder"/>
    <Button Name="btnGpioInput" Content="Start GPIO Input"/>
    <TextBlock Name="tbGpioIn" TextWrapping="Wrap" Grid.Column="1" Foreground="Blue"/>
    <TextBlock Name="tbInputInfo" Foreground="Blue"/>
    <Border/>
  </StackPanel>
  
</UserControl>